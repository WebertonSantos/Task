<Window x:Class="Exemplo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exemplo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="100" MaxHeight="200"/>
            <RowDefinition MinHeight="100" MaxHeight="200"/>
            <RowDefinition MinHeight="100" MaxHeight="200"/>
        </Grid.RowDefinitions>
        <TextBox Name="TxtUrl" TextWrapping="Wrap" Text="Informe a URL" Grid.Row="0"/>
        <Button x:Name="BtnCheckUrl" Content="Check URL" Click="btnCheckUrl_Click" Grid.Row="1"/>
        <Label x:Name="LblResult" Grid.Row="2"/>
    </Grid>
</Window>
